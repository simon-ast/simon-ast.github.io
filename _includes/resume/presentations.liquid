<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign presentations = data[1] | sort: 'eventDate' | reverse %}
  {% for content in presentations %}
    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.eventDate %} {% assign date = content.eventDate | split: '-' | join: '.' %} {% else %} {% assign date = '' %} {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">{{ date }}</span>
                </td>
              </tr>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                    {{ content.contribType }}
                  </span>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            {% if content.eventPage %} 
              <a href="{{ content.eventPage }}">{{ content.eventName }}</a>
            {% else %}
              {{ content.eventName }}
            {% endif %}
            <span style="font-weight:normal">, {{ content.eventLoc }}</span>
          </h6>
          <p class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic"> 
            {{content.contribTitle}}
          </p>
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
